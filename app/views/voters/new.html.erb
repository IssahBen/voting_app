<div class="container">

    <div class="row">
            <div class="col-10">
                <%= render 'shared/errors', object: @voter %>
                <%= form_with model: @voter, class:" signup-form shadow p-3 mb-5 bg-grey rounded",local: true do |form| %>

                <div class= "form-group row">

                    <%= form.label :first_name,class: "col-2 col-form-label text-light " %>
                    <div class= "col-10">
                        <%= form.text_field :first_name,class: "form-control rounded",placeholder: "Enter username" %>
                    </div>
                </div>
                <div class= "form-group row">

                    <%= form.label :last_name,class: "col-2 col-form-label text-light " %>
                    <div class= "col-10">
                        <%= form.text_field :last_name,class: "form-control rounded",placeholder: "Enter username" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= form.label :email ,class: "col-2 col-form-label text-light" %>

                    <div class= "col-10">

                        <%= form.email_field :email , class: "form-control rounded" ,placeholder:"Enter email adress" %>
                        <%= form.hidden_field :user_id, :value => current_user.id %>

                    </div>
                </div>

                <div class= "form-group  text-center ">
                    <%= form.submit 'Signup' ,class: "btn btn-success btn-lg" %>
                </div>

                <% end %>
            </div>

    </div>

</div>