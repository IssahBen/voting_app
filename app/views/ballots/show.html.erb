<h2>Add candidates to Ballot</h2>

<%= link_to "Add Candidate",new_ballot_candidate_path(@ballot) %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Votes</th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each_with_index do |candidate|%>
        <tr>
        <th scope="row">1</th>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%=candidate.get_upvotes.size%></td>
        </tr>
    <% end %>
  </tbody>
</table>