<div class="container">

    <div class= "row justify-content-center">
            <div class="col-10">

                <%= form_with model: object, class:"shadow p-3 mb-5 bg-grey rounded"  do |form| %>

                <div class = "form-group row">

                    <%= form.label :name,class: "col-2 col-form-label text-light " %>
                    <div class= "col-10">
                        <%= form.text_field :name,class: "form-control rounded",placeholder: "Enter Name" %>
                    </div>
                </div>

                <div class = "form-group row">
                    <%= form.label :description ,class: "col-2 col-form-label text-light" %>

                    <div class= "col-10">

                        <%= form.text_area :description , class: "form-control rounded" ,placeholder:"Enter Description" %>
                        <%= form.hidden_field :user_id, :value => current_user.id %>

                    </div>

                <div class = "form-group  text-center ">
                    <%= form.submit "Add  Ballot ", class: "btn btn-outline-primary btn-lg" %>
                </div>

                <% end %>
            </div>

    </div>

</div>
